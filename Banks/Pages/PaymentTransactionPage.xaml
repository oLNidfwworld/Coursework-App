<Page x:Class="Banks.Pages.PaymentTransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Banks.Pages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="PaymentTransactionPage">

    <Grid>
        <Border Style="{StaticResource MainBorderStyle}"  >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                <Border Style="{StaticResource ItemsBorderStyle}">
                    <StackPanel>

                        <TextBlock>На какой счет переводить</TextBlock>
                        <TextBox  md:HintAssist.Hint="1234 1234 1234 1234" Width="682"></TextBox>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource ItemsBorderStyle}">
                    <StackPanel>

                        <TextBlock>Сумма</TextBlock>
                        <TextBox  md:HintAssist.Hint="В Рублях" Width="682"></TextBox>
                    </StackPanel>
                </Border>
                <Button Content="Перевести" Width="440"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
